<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.dao.UserDao">
    <sql id="Base_Column_List">
        id,user_name,pay_password,telephone,coin,point,diamond,head_img,status,inviter_id,invitation_code
    </sql>

    <select id="queryUserById" resultType="com.app.model.po.UserPO">
        select
        <include refid="Base_Column_List" />
        from `user`
        where id = #{userId}
    </select>
    <update id="updateHeadImgById" parameterType="com.app.model.po.UserPO">
        update `user`
        set head_img = #{headImg}
        where id = #{userId}
    </update>
    
    <update id="updatePayPassword">
        update `user`
        set pay_password = #{payPassword}
        where id = #{userId}
    </update>

    <update id="updateTelephone">
        update `user`
        set telephone = #{telephone}
        where id = #{userId}
    </update>
</mapper>
